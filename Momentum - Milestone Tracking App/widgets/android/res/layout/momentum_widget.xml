<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background"
    android:gravity="center">

    <!-- Icon with background -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        
        <View
            android:id="@+id/widget_icon_background"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/icon_circle"
            android:backgroundTint="#FF6B6B" />
        
        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_heart"
            android:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Days number -->
    <TextView
        android:id="@+id/widget_days_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="127"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Days text -->
    <TextView
        android:id="@+id/widget_days_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="days until"
        android:textSize="12sp"
        android:textColor="#E6FFFFFF"
        android:layout_marginBottom="4dp" />

    <!-- Moment title -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wedding Day"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- App name -->
    <TextView
        android:id="@+id/widget_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Momentum"
        android:textSize="12sp"
        android:textColor="#B3FFFFFF" />

</LinearLayout>