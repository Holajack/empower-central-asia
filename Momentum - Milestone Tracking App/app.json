{
  "expo": {
    "name": "Momentum",
    "slug": "momentum-milestone-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/easyappicon-icons-1753255920064/ios/iTunesArtwork@2x.png",
    "scheme": "momentum",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/easyappicon-icons-1753255920064/ios/iTunesArtwork@2x.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.momentum.milestonetracker",
      "icon": "./assets/easyappicon-icons-1753255920064/ios/iTunesArtwork@2x.png"
    },
    "android": {
      "package": "com.momentum.milestonetracker",
      "icon": "./assets/easyappicon-icons-1753255920064/android/ic_launcher-web.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/easyappicon-icons-1753255920064/android/mipmap-xxxhdpi/ic_launcher_foreground.webp",
        "backgroundColor": "#667eea"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "@bittingz/expo-widgets",
        {
          "ios": {
            "src": "./widgets/ios",
            "devTeamId": "YOUR_TEAM_ID",
            "mode": "production",
            "moduleDependencies": [],
            "useLiveActivities": false,
            "frequentUpdates": false,
            "widgets": [
              {
                "name": "MomentumWidget",
                "displayName": "Momentum Tracker",
                "description": "Track your important milestones",
                "families": [
                  "systemSmall",
                  "systemMedium",
                  "systemLarge"
                ]
              }
            ]
          },
          "android": {
            "src": "./widgets/android",
            "widgets": [
              {
                "name": "MomentumWidget",
                "displayName": "Momentum Tracker",
                "description": "Track your important milestones"
              }
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "MomentumWidgetExtension",
                  "bundleIdentifier": "com.momentum.milestonetracker.MomentumWidgetExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.momentum.milestonetracker.expowidgets"
                    ],
                    "aps-environment": "production"
                  }
                }
              ]
            }
          }
        },
        "projectId": "b492cbc4-b60a-432e-8f7b-ded463c95871"
      }
    }
  }
}
