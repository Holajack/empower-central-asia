# ==============================================
# Morpheus Web Intelligence System - Environment Variables
# ==============================================
# Copy this file to .env and fill in your API keys
# DO NOT commit .env file to git!

# ----------------------------------------------
# OpenAI Configuration (REQUIRED)
# ----------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
# Get from: https://platform.openai.com/api-keys

# ----------------------------------------------
# Google Cloud Platform (REQUIRED for most agents)
# ----------------------------------------------
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_API_KEY=your-google-api-key
# Get from: https://console.cloud.google.com/apis/credentials

# Path to service account JSON file for Google APIs
GOOGLE_SEARCH_CONSOLE_CREDENTIALS=/path/to/service-account.json
# Get from: https://console.cloud.google.com/iam-admin/serviceaccounts

# Google Analytics 4 Property ID
GOOGLE_ANALYTICS_PROPERTY_ID=123456789
# Get from: https://analytics.google.com/

# ----------------------------------------------
# Netlify Configuration (REQUIRED for deployment)
# ----------------------------------------------
NETLIFY_AUTH_TOKEN=your-netlify-personal-access-token
# Get from: https://app.netlify.com/user/applications#personal-access-tokens

NETLIFY_SITE_ID=your-site-id-here
# Get from: Site settings > General > Site details

# ----------------------------------------------
# Optional: Translation Services
# ----------------------------------------------
# DEEPL_API_KEY=your-deepl-api-key
# Get from: https://www.deepl.com/pro-api

# ----------------------------------------------
# Optional: Communication Services
# ----------------------------------------------
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
# Get from: https://www.twilio.com/console

# SENDGRID_API_KEY=your-sendgrid-api-key
# Get from: https://app.sendgrid.com/settings/api_keys

# ----------------------------------------------
# Agent Configuration
# ----------------------------------------------
# Enable/disable specific agents (true/false)
AGENT_SCOUT_ENABLED=true
AGENT_SCRIBE_ENABLED=true
AGENT_REVIVE_ENABLED=true
AGENT_CANVAS_ENABLED=true
AGENT_BEACON_ENABLED=true
AGENT_ARCHITECT_ENABLED=true
AGENT_NAVIGATOR_ENABLED=true
AGENT_PULSE_ENABLED=true
AGENT_CUSTODIAN_ENABLED=true

# Agent scheduling (cron format)
MORPHEUS_SCHEDULE=0 2 * * 0  # Sunday 2 AM EST

# ----------------------------------------------
# Rate Limiting & Performance
# ----------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds
CACHE_TTL=3600  # 1 hour in seconds

# ----------------------------------------------
# Git Configuration
# ----------------------------------------------
GIT_REPO_PATH=/Users/jackenholland/Businesses Beyond Borders/empower-central-asia
GIT_DEFAULT_BRANCH=main
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=true

# ----------------------------------------------
# Website Configuration
# ----------------------------------------------
SITE_URL=https://businessesbeyondborders.com
SITE_NAME=Businesses Beyond Borders
SITE_TIMEZONE=America/New_York

# ----------------------------------------------
# Content Generation Settings
# ----------------------------------------------
DEFAULT_BLOG_LENGTH=1200  # words
DEFAULT_IMAGE_SIZE=1024x1024
CONTENT_LANGUAGE=en
CONTENT_TONE=professional-approachable

# ----------------------------------------------
# Monitoring & Alerts
# ----------------------------------------------
ENABLE_ALERTS=true
ALERT_EMAIL=your-email@example.com
ALERT_THRESHOLD_ERRORS=5
ALERT_THRESHOLD_DOWNTIME=300  # seconds

# ----------------------------------------------
# Development Settings
# ----------------------------------------------
DEBUG_MODE=false
VERBOSE_LOGGING=false
DRY_RUN=false  # Set to true to test without making changes
