# BBB Web Intelligence System - Production Environment Configuration
# SECURITY: This file should NEVER be committed to Git
# Copy this to .env and fill in your actual credentials

# ============================================================================
# CRITICAL - OpenAI (Content Generation)
# ============================================================================
OPENAI_API_KEY=sk-...your-key-here
OPENAI_ORG_ID=org-...your-org-id  # Optional

# ============================================================================
# CRITICAL - Google Cloud APIs
# ============================================================================
# OAuth credentials file path (download from Google Cloud Console)
GOOGLE_OAUTH_CREDENTIALS=/Users/jackenholland/.config/google-mcp/gcp-oauth.keys.json
GOOGLE_CLOUD_PROJECT_ID=bbb-web-intelligence

# PageSpeed Insights API Key
PAGESPEED_API_KEY=your-pagespeed-api-key

# ============================================================================
# HIGH PRIORITY - Netlify (Deployment)
# ============================================================================
NETLIFY_API_KEY=your-netlify-api-key
NETLIFY_SITE_ID=your-site-id
NETLIFY_BUILD_HOOK_URL=https://api.netlify.com/build_hooks/your-hook-id

# ============================================================================
# HIGH PRIORITY - Image Generation
# ============================================================================
NANO_BANANA_API_ENDPOINT=https://api.nanobanana.com/v1/generate
NANO_BANANA_API_KEY=your_nano_banana_api_key_here
NANO_BANANA_DEFAULT_STYLE=modern
NANO_BANANA_DEFAULT_QUALITY=high
NANO_BANANA_TIMEOUT=30000

# ============================================================================
# MEDIUM PRIORITY - Translation Services
# ============================================================================
# Google Translate is included in Google Cloud APIs
GOOGLE_TRANSLATE_ENABLED=true

# DeepL (optional - higher quality translations)
# Get free API key at: https://www.deepl.com/pro-api
DEEPL_API_KEY=your-deepl-api-key

# ============================================================================
# MEDIUM PRIORITY - Communication Services
# ============================================================================
# Twilio (SMS notifications)
# Sign up at: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email notifications)
# Sign up at: https://signup.sendgrid.com/
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@businessesbeyondborders.com
SENDGRID_FROM_NAME=Businesses Beyond Borders

# ============================================================================
# LOW PRIORITY - Advanced SEO Tools (Optional)
# ============================================================================
# Ahrefs API (Lite plan: $99/month)
# Sign up at: https://ahrefs.com/api
AHREFS_API_KEY=your-ahrefs-api-key

# SEMrush API (Pro plan: $119/month)
# Sign up at: https://www.semrush.com/api-documentation/
SEMRUSH_API_KEY=your-semrush-api-key

# ============================================================================
# LOW PRIORITY - Monitoring Services (Optional)
# ============================================================================
# UptimeRobot (Free tier available)
# Sign up at: https://uptimerobot.com/
UPTIMEROBOT_API_KEY=your-uptimerobot-api-key

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
# Environment
ENVIRONMENT=production  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_DIR=logs

# Timezone
TIMEZONE=America/New_York

# Website Configuration
WEBSITE_URL=https://businessesbeyondborders.com
WEBSITE_PATH=/Users/jackenholland/Businesses Beyond Borders/empower-central-asia
WEBSITE_BRANCH=main

# API Rate Limiting (requests per minute)
API_RATE_LIMIT_RPM=60
OPENAI_RATE_LIMIT_RPM=60
GOOGLE_RATE_LIMIT_RPM=100
NETLIFY_RATE_LIMIT_RPM=100

# Response Caching
API_CACHE_ENABLED=true
API_CACHE_TTL=3600  # seconds
API_CACHE_DIR=.cache

# Retry Configuration
API_RETRY_COUNT=3
API_RETRY_DELAY=1  # seconds
API_TIMEOUT=30  # seconds

# ============================================================================
# AGENT-SPECIFIC SETTINGS
# ============================================================================

# Web-Scout (Research & Discovery)
SCOUT_ENABLED=true
SCOUT_MAX_DAILY_TOPICS=10
SCOUT_RESEARCH_DEPTH=comprehensive  # quick, standard, comprehensive
SCOUT_COMPETITOR_DOMAINS=example.com,competitor.org

# Web-Scribe (Content Writing)
SCRIBE_ENABLED=true
SCRIBE_DEFAULT_LENGTH=medium  # short, medium, long
SCRIBE_DAILY_POST_LIMIT=3
SCRIBE_AUTO_PUBLISH=false  # Set to true to auto-publish (risky)
SCRIBE_MIN_QUALITY_SCORE=85  # 0-100

# Web-Revive (Legacy Content Modernizer)
REVIVE_ENABLED=true
REVIVE_MIN_AGE_DAYS=90  # Only update posts older than this
REVIVE_BATCH_SIZE=3  # Posts to update per run
REVIVE_AUTO_DEPLOY=false

# Web-Canvas (Design & UI/UX)
CANVAS_ENABLED=true
CANVAS_IMAGE_QUALITY=high  # low, medium, high
CANVAS_AUTO_OPTIMIZE=true  # Auto-optimize images

# Web-Beacon (SEO Optimization)
BEACON_ENABLED=true
BEACON_CHECK_FREQUENCY=daily  # hourly, daily, weekly
BEACON_ALERT_THRESHOLD=90  # Performance score alert threshold
BEACON_MIN_POSITION_ALERT=10  # Alert if ranking drops below this

# Web-Architect (Schema.org & Structured Data)
ARCHITECT_ENABLED=true
ARCHITECT_AUTO_FIX=true  # Auto-fix schema errors
ARCHITECT_VALIDATE_ON_DEPLOY=true

# Web-Navigator (Localization)
NAVIGATOR_ENABLED=true
NAVIGATOR_LANGUAGES=en,ru  # English, Russian
NAVIGATOR_AUTO_TRANSLATE=false  # Requires manual review if false

# Web-Pulse (Event Scheduling)
PULSE_ENABLED=true
PULSE_REMINDER_DAYS_BEFORE=7,3,1  # When to send reminders
PULSE_SMS_ENABLED=false  # Requires Twilio
PULSE_EMAIL_ENABLED=true

# Web-Custodian (Site Maintenance)
CUSTODIAN_ENABLED=true
CUSTODIAN_UPTIME_CHECK_INTERVAL=300  # seconds (5 minutes)
CUSTODIAN_BROKEN_LINK_CHECK_FREQUENCY=daily
CUSTODIAN_ALERT_EMAIL=admin@businessesbeyondborders.com
CUSTODIAN_AUTO_FIX_ENABLED=false  # Manual approval required

# ============================================================================
# SCHEDULE CONFIGURATION (Cron Format)
# ============================================================================
# Morpheus Weekly Cycle: Sundays at 2:00 AM EST
WEEKLY_CYCLE_ENABLED=true
WEEKLY_CYCLE_SCHEDULE=0 2 * * 0  # Cron format: minute hour day month weekday

# Emergency Health Checks: Every hour
EMERGENCY_CHECK_ENABLED=true
EMERGENCY_CHECK_SCHEDULE=0 * * * *  # Every hour

# Daily Content Generation: Every day at 9:00 AM
DAILY_CONTENT_SCHEDULE=0 9 * * *

# SEO Monitoring: Daily at 6:00 AM
SEO_CHECK_SCHEDULE=0 6 * * *

# Schema Validation: Weekly on Mondays at 3:00 AM
SCHEMA_CHECK_SCHEDULE=0 3 * * 1

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
# Email notifications
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATION_RECIPIENTS=admin@businessesbeyondborders.com,jacken.holland@gmail.com

# SMS notifications (requires Twilio)
SMS_NOTIFICATIONS_ENABLED=false
SMS_NOTIFICATION_RECIPIENTS=+1234567890

# Notification priorities (which events trigger alerts)
NOTIFY_ON_ERROR=true
NOTIFY_ON_WARNING=true
NOTIFY_ON_SUCCESS=false  # Only notify on completion if this is true
NOTIFY_ON_DEPLOY=true
NOTIFY_ON_SEO_DROP=true
NOTIFY_ON_DOWNTIME=true

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# API key rotation reminder (days)
API_KEY_ROTATION_REMINDER=90

# Backup settings
AUTO_BACKUP_ENABLED=true
BACKUP_DIR=/Users/jackenholland/Businesses Beyond Borders/backups
BACKUP_RETENTION_DAYS=30

# Git security
GIT_COMMIT_SIGNING=false  # Enable GPG signing if configured
GIT_AUTO_PUSH=true

# ============================================================================
# DEVELOPMENT/DEBUG SETTINGS (Set to false in production!)
# ============================================================================
DEBUG_MODE=false
DRY_RUN_MODE=false  # If true, don't actually deploy/publish
VERBOSE_LOGGING=false
TEST_MODE=false

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================
# Concurrent operations
MAX_CONCURRENT_AGENTS=3
MAX_CONCURRENT_API_CALLS=5

# Workflow timeouts
WORKFLOW_TIMEOUT=3600  # seconds (1 hour)
AGENT_TIMEOUT=1800  # seconds (30 minutes)

# Report generation
GENERATE_DAILY_REPORT=true
GENERATE_WEEKLY_REPORT=true
GENERATE_MONTHLY_REPORT=true
REPORT_FORMAT=markdown  # markdown, html, pdf

# ============================================================================
# LEGACY COMPATIBILITY
# ============================================================================
# Support for existing TypeScript blog scheduler
TS_BLOG_SCHEDULER_ENABLED=false  # Disable when migrating to Python
TS_INTEGRATION_MODE=false
